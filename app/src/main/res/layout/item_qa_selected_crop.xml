<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="7dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_crop"
            style="@style/Button.Round"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/gap_2x"
            android:gravity="center"
            android:paddingBottom="@dimen/gap"
            android:paddingLeft="@dimen/gap_3x"
            android:paddingRight="@dimen/gap_3x"
            android:paddingTop="@dimen/gap"
            android:text="西瓜"
            android:textColor="@color/common_h2"
            app:rv_backgroundColor="@color/background"
            app:rv_isRadiusHalfHeight="true" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="right|top"
            android:src="@mipmap/ic_tag_del"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>