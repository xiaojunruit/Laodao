<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item"
    style="@style/Padding.Item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_seize_seat"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/gap_2x"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="昌吉出售小三膜播种机|5穴点播机小三膜播种机|5穴点播机小三膜播种机|5穴点播机"
                android:textColor="@color/common_h1"
                android:textSize="@dimen/sp_larger" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/gap"
                android:layout_weight="1"
                android:text="农副产品"
                android:textSize="@dimen/sp_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/ic_time"
                    android:drawablePadding="@dimen/gap"
                    android:maxLines="1"
                    android:text="2017-03-30"
                    android:textSize="@dimen/sp_small" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_location_blue"
                    android:drawablePadding="@dimen/gap"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:text="昌吉州/昌吉市/昌吉州/昌吉市/"
                    android:textSize="@dimen/sp_small" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_isvalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:src="@mipmap/ic_invalid"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>