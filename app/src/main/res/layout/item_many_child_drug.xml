<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gap_2x">

    <FrameLayout
        style="@style/Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_many_icon"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/gap_2x"/>

            <TextView
                android:id="@+id/tv_many_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="施肥要点"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_larger" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/gap"
            android:text="收起"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_divider_narrow" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_2x"
        android:paddingLeft="@dimen/gap_3x"
        android:paddingRight="@dimen/gap_3x"
        android:text="解决方案1"
        android:textColor="@color/common_h1" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="@dimen/gap_3x"
        android:paddingRight="@dimen/gap_3x"
        android:text="每亩25~150kg生石灰（钙肥）(粉末,CaO≥50%)。施用目的:供应作物钙素养分，调节土壤酸性，改善土壤物理性状，防治病虫害。不耐酸的作物，棉花、小麦、大麦、苜蓿、番茄、甜菜等可以多施。耐酸作物马铃薯、烟草、茶树、荞麦、可以少施。不能和氨态氮肥、腐熟的有机肥和水溶性磷肥混合施用。"
        android:textSize="@dimen/sp_weaker" />

</LinearLayout>