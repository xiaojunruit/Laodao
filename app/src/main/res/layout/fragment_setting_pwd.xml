<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Padding"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/gap_2x"
            android:background="@drawable/bg_white_line_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textColor="@color/common_h1" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入新密码"
                android:paddingLeft="@dimen/gap_2x"
                android:singleLine="true"
                android:textColor="@color/common_h1"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/Padding"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/gap_2x"
            android:background="@drawable/bg_white_line_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textColor="@color/common_h1" />

            <EditText
                android:id="@+id/et_repeat_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请确认密码"
                android:paddingLeft="@dimen/gap_2x"
                android:singleLine="true"
                android:textColor="@color/common_h1"
                android:textSize="13sp" />

        </LinearLayout>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/btn_submit"
            style="@style/Button.Round"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/gap_3x"
            android:layout_marginRight="@dimen/gap_3x"
            android:layout_marginTop="@dimen/gap_4x"
            android:padding="@dimen/gap_2x"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_larger" />
    </LinearLayout>
</LinearLayout>