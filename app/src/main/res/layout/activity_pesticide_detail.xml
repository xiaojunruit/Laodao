                        android:layout_height="@dimen/tab_height"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="有效起始日"
                            android:textColor="@color/common_h1"
                            android:textSize="@dimen/sp_larger" />

                        <TextView
                            android:id="@+id/tv_expiry_start"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="2013-12-24"
                            android:textColor="@color/common_h1" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/common_divider_narrow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tab_height"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="有效截止日"
                            android:textColor="@color/common_h1"
                            android:textSize="@dimen/sp_larger" />

                        <TextView
                            android:id="@+id/tv_expiry_end"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="2013-12-24"
                            android:textColor="@color/common_h1" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_height"
                    android:background="@color/background"
                    android:gravity="center"
                    android:text="有效成分信息"
                    android:textColor="@color/common_h1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_divider_narrow" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/tab_height"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="有效成分"
                        android:textColor="@color/common_h1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/tab_height"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="有效成分含量"
                        android:textColor="@color/common_h1" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_divider_narrow" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/constitute_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_height"
                    android:background="@color/background"
                    android:gravity="center"
                    android:text="有效成分用药信息"
                    android:textColor="@color/common_h1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_divider_narrow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_height"
                    android:background="@color/background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="作物"
                        android:textColor="@color/common_h1"
                        android:textSize="@dimen/sp_weak" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="防治对象"
                        android:textColor="@color/common_h1"
                        android:textSize="@dimen/sp_weak" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="有效成分用药信息"
                        android:textColor="@color/common_h1"
                        android:textSize="@dimen/sp_weak" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="施用方法"
                        android:textColor="@color/common_h1"
                        android:textSize="@dimen/sp_weak" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_divider_narrow" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/usage_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_divider_narrow" />

                <TextView
                    android:id="@+id/tv_dose_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:lineSpacingExtra="@dimen/gap"
                    android:padding="@dimen/gap_3x"
                    android:textColor="@color/common_h3"
                    android:textSize="@dimen/sp_weak"
                    tools:text="注意事项" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/background" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_height"
                    android:background="@drawable/bg_white_line_gray"
                    android:drawableLeft="@mipmap/ic_bule"
                    android:drawablePadding="@dimen/gap"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/gap_3x"
                    android:text="产品性能(用途)"
                    android:textSize="@dimen/sp_larger" />

                <TextView
                    android:id="@+id/tv_product_usage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:lineSpacingExtra="@dimen/gap"
                    android:padding="@dimen/gap_3x"
                    android:textColor="@color/common_h3"
                    tools:text="高效氯氰菊酯为拟除虫菊酯类杀虫剂，具有触杀和胃毒作用，无内吸和熏蒸作用。对光、热稳定。" />

                <View
