<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/gap_2x"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gap_3x">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/gap_3x">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/gap_2x"
            android:drawableRight="@mipmap/ic_right_arrow"
            android:text="小贾农资门店"
            android:textColor="@color/common_h1"
            android:textSize="@dimen/sp_larger" />
    </LinearLayout>

    <include layout="@layout/widget_view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_payment_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/gap_3x"
            android:paddingRight="@dimen/gap"
            android:paddingTop="@dimen/gap_2x"
            android:text="还款总额：64621元"
            android:textSize="@dimen/sp_larger" />

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(已优惠：500元)"
            android:textColor="@color/common_h3"
            android:textSize="@dimen/sp_weaker" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_payment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/gap_3x"
        android:paddingRight="@dimen/gap"
        android:paddingTop="@dimen/gap_2x"
        android:text="还款日期：2017-08-08"
        android:textColor="@color/common_h3"
        android:textSize="@dimen/sp_larger" />
</LinearLayout>