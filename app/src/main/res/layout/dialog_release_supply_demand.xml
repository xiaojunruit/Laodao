<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:paddingBottom="80dp">

        <com.laoodao.smartagri.view.IconButton
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ib_gap="@dimen/gap"
            app:ib_iconSize="80dp"
            app:ib_icon_src="@mipmap/ic_release_supply"
            app:ib_textColor="@color/white"
            app:ib_textSize="@dimen/sp_larger"
            app:ib_title="发布求购" />

        <com.laoodao.smartagri.view.IconButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap_6x"
            app:ib_gap="@dimen/gap"
            app:ib_iconSize="80dp"
            android:id="@+id/btn_sales"
            app:ib_icon_src="@mipmap/ic_release_demand"
            app:ib_textColor="@color/white"
            app:ib_textSize="@dimen/sp_larger"
            app:ib_title="发布供销" />

    </LinearLayout>

</RelativeLayout>