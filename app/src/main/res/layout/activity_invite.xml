<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.user.activity.InviteActivity">

    <include layout="@layout/_widget_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:background="@mipmap/bg_invite"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_4x"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    tools:text="邀请朋友加入劳道" />

                <TextView
                    android:id="@+id/tv_invite_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    tools:text="一起体验感受最为精彩的农业互联网生活" />


                <com.flyco.roundview.RoundTextView
                    android:id="@+id/btn_invite"
                    style="@style/Button.Round"
                    android:layout_width="240dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="28dp"
                    android:paddingBottom="@dimen/gap_2x"
                    android:paddingTop="@dimen/gap_2x"
                    android:textSize="@dimen/sp_larger"
                    app:rv_backgroundColor="@color/light_red"
                    app:rv_cornerRadius="20dp"
                    tools:text="邀请人数：100" />

                <TextView
                    android:id="@+id/btn_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/gap_3x"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_weak"
                    android:text="点击查看详情" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_5x"
                android:gravity="center_horizontal"
                android:textColor="@color/common_h1"
                tools:text="分享页面给朋友" />

            <TextView
                android:id="@+id/tv_share_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap"
                android:gravity="center_horizontal"
                android:textColor="@color/common_h1"
                tools:text="朋友下载注册后可获得100积分" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_6x"
                android:background="@color/white"
                android:paddingLeft="@dimen/gap_4x"
                android:paddingRight="@dimen/gap_4x">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_centerVertical="true"
                    android:background="@color/common_divider_narrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/gap"
                    android:paddingRight="@dimen/gap"
                    android:text="立即分享"
                    android:textColor="@color/common_h3" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/gap_3x"
                android:layout_marginRight="@dimen/gap_3x"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_wx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/gap_4x"
                    android:src="@mipmap/ic_wx" />

                <ImageView
                    android:id="@+id/btn_friend"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/gap_4x"
                    android:src="@mipmap/ic_friend" />

                <ImageView
                    android:id="@+id/btn_qq"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/gap_4x"
                    android:src="@mipmap/ic_qq" />

                <ImageView
                    android:id="@+id/btn_qzone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/gap_4x"
                    android:src="@mipmap/ic_qzone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/gap_4x"
                android:layout_marginRight="@dimen/gap_4x"
                android:background="@drawable/bg_dotted_line_gray" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/gap_4x"
                tools:src="@mipmap/ic_laoodao" />

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_3x"
                android:gravity="center_horizontal"
                tools:text="新疆劳道农业科技有限公司" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>