<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/gap_2x">

        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap"
            android:orientation="horizontal"
            app:rv_backgroundColor="#F4F4F4"
            app:rv_cornerRadius="3dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="3dp"
                tools:src="@mipmap/ic_test" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/gap_3x"
                android:layout_marginLeft="@dimen/gap_2x"
                android:layout_marginRight="@dimen/gap_2x"
                android:layout_marginTop="@dimen/gap_3x"
                android:ellipsize="end"
                android:maxLines="3"
                tools:text="小黄瓜用什么肥料好？" />

        </com.flyco.roundview.RoundLinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_2x"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_leaving"
                android:drawablePadding="@dimen/gap"
                android:gravity="center"
                android:text="回答  12"
                android:textColor="@color/common_h2"
                android:textSize="@dimen/sp_weak" />

            <TextView
                android:id="@+id/cb_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_6x"
                android:drawableLeft="@drawable/selector_follow"
                android:drawablePadding="@dimen/gap"
                android:gravity="center"
                android:paddingLeft="@dimen/gap"
                android:text="收藏"
                android:textColor="@color/common_h2"
                android:textSize="@dimen/sp_weak" />

            <TextView
                android:id="@+id/tv_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_6x"
                android:drawableLeft="@mipmap/ic_preview"
                android:drawablePadding="@dimen/gap"
                android:gravity="center"
                android:text="浏览  12"
                android:textColor="@color/common_h2"
                android:textSize="@dimen/sp_weak" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>