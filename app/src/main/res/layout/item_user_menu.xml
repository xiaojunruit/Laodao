<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/invite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/gap_3x">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/gap_3x">

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_share" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/Tab.IconText_Line"
            android:background="@null"
            android:text="劳道分享" />

        <com.flyco.tablayout.widget.MsgView
            android:id="@+id/mv_chat_un_num"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_weak"
            android:visibility="gone"
            app:mv_backgroundColor="@color/red"
            app:mv_cornerRadius="7dp"
            tools:text="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow" />
    </LinearLayout>

</LinearLayout>
