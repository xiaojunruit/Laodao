<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/gap_2x"
        android:orientation="horizontal"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="3dp"
        app:rv_strokeColor="@color/colorAccent"
        app:rv_strokeWidth="2dp">

        <com.flyco.roundview.RoundTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="果树"
            android:textColor="@color/white"
            app:rv_backgroundColor="@color/colorAccent"
            app:rv_cornerRadius_BL="2dp"
            app:rv_cornerRadius_TL="2dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <com.flyco.roundview.RoundTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="果树"
            android:textColor="@color/common_h2" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/roundTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="果树"
            android:textColor="@color/common_h2" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/roundTextView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="果树"
            android:textColor="@color/common_h2"
            app:rv_cornerRadius_BR="2dp"
            app:rv_cornerRadius_TR="2dp" />


    </com.flyco.roundview.RoundLinearLayout>
</LinearLayout>