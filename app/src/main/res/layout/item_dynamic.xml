<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/gap_3x">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您关注的问题有新的回答"
        android:textColor="@color/common_h3"
        android:textSize="@dimen/sp_weaker" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap"
        android:text="今天13:02"
        android:textColor="@color/common_h3"
        android:textSize="@dimen/sp_weaker" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="阿斯兰的附件是垃圾分类开始对接发生了几分"
        android:textColor="@color/common_h1"
        android:textSize="@dimen/sp_larger"
        android:visibility="gone" />

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_2x"
        android:orientation="horizontal"
        android:padding="@dimen/gap_2x"
        app:rv_backgroundColor="#F6F6F6"
        app:rv_cornerRadius="3dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/gap_2x"
            android:visibility="gone"
            tools:src="@mipmap/ic_camera" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_source_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="阿斯蒂芬李会计师到立刻付款了的附件"
                android:textColor="@color/common_h1"
                android:textSize="@dimen/sp_larger"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_source_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="案例的附件三路口附近路口的附近"
                android:textColor="@color/common_h2"
                android:textSize="@dimen/sp_default" />
        </LinearLayout>

    </com.flyco.roundview.RoundLinearLayout>

</LinearLayout>