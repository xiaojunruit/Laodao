<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_buyDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="昌吉求购小三模播种机|5穴点播器"
            android:textColor="@color/common_h1"
            android:textSize="@dimen/sp_larger" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/gap"
            android:layout_weight="1"
            android:text="农副产品" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap">

            <TextView
                android:id="@+id/tv_publishtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布于2017-03-30"
                android:textSize="@dimen/sp_weak" />

            <TextView
                android:id="@+id/tv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="浏览100次"
                android:textSize="@dimen/sp_weak" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_divider_narrow" />

    <LinearLayout
        style="@style/Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已审核"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_default"
            android:visibility="invisible" />

        <!--<com.flyco.roundview.RoundTextView-->
        <!--android:id="@+id/rtv_edit"-->
        <!--style="@style/Button.Round.Small"-->
        <!--android:text="编辑" />-->

        <!--<com.flyco.roundview.RoundTextView-->
        <!--android:id="@+id/rtv_delete"-->
        <!--style="@style/Button.Round.Small"-->
        <!--android:text="删除" />-->

        <!--<com.flyco.roundview.RoundTextView-->
        <!--android:id="@+id/rtv_share"-->
        <!--style="@style/Button.Round.Small"-->
        <!--android:text="分享" />-->
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="@dimen/gap_3x">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="已审核"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_default"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/gap"
            android:paddingLeft="@dimen/gap_3x"
            android:paddingRight="@dimen/gap_3x"
            android:src="@mipmap/ic_more" />
    </FrameLayout>
</LinearLayout>