<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.discovery.activity.NewsDetailActivity">

    <include layout="@layout/_widget_toolbar" />

    <com.ejz.multistateview.MultiStateView
        android:id="@+id/multiStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_viewState="loading">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/gap_3x"
                    android:paddingRight="@dimen/gap_3x">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/gap_3x"
                        android:ellipsize="end"
                        android:lineSpacingExtra="6dp"
                        android:maxLines="2"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_title"
                        tools:text="生态养殖，专业有效方式方法创造高产记录专业有效方式方法创造高产记录" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/gap_3x"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/gap_4x"
                            android:textColor="@color/common_h3"
                            android:textSize="@dimen/sp_weak"
                            tools:text="中国农业信息网" />

                        <TextView
                            android:id="@+id/tv_read"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/common_h3"
                            android:textSize="@dimen/sp_weak"
                            tools:text="浏览1560" />


                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/gap_4x"
                            android:textColor="@color/common_h3"
                            android:textSize="@dimen/sp_weak"
                            tools:text="02-16 16:10" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/expand_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/gap_4x"
                        android:lineSpacingExtra="8dp"
                        android:textColor="@color/common_h1"
                        android:textSize="@dimen/sp_larger" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/gap_2x"
                        android:layout_marginTop="@dimen/gap_6x">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:background="@color/common_divider_narrow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/gap"
                            android:paddingRight="@dimen/gap"
                            android:text="分享到" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/btn_share_wx"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="9dp"
                            android:drawableTop="@mipmap/ic_wx"
                            android:gravity="center"
                            android:text="微信"
                            android:textSize="@dimen/sp_weak" />

                        <TextView
                            android:id="@+id/btn_share_friend"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="9dp"
                            android:drawableTop="@mipmap/ic_friend"
                            android:gravity="center"
                            android:text="朋友圈"
                            android:textSize="@dimen/sp_weak" />

                        <TextView
                            android:id="@+id/btn_share_qq"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="9dp"
                            android:drawableTop="@mipmap/ic_qq"
                            android:gravity="center"
                            android:text="QQ"
                            android:textSize="@dimen/sp_weak" />

                        <TextView
                            android:id="@+id/btn_share_qqzone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="9dp"
                            android:drawableTop="@mipmap/ic_qzone"
                            android:gravity="center"
                            android:text="QQ空间"
                            android:textSize="@dimen/sp_weak" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="37dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_gravity="bottom"
                            android:background="@color/common_divider_narrow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_underline_blue_1dp"
                            android:paddingBottom="8dp"
                            android:text="相关推荐"
                            android:textColor="@color/common_h1" />


                    </FrameLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recommend_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </ScrollView>
    </com.ejz.multistateview.MultiStateView>
</LinearLayout>