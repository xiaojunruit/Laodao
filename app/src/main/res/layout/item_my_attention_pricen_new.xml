<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/gap_2x"
    android:paddingLeft="@dimen/gap_3x"
    android:paddingRight="@dimen/gap_3x"
    android:paddingTop="@dimen/gap_2x">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/riv_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_test" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/gap"
        android:layout_marginLeft="@dimen/gap_2x"
        android:layout_marginTop="@dimen/gap">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/gap_4x"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="棉花"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_larger" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="棉花衣份36.8%" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/gap_4x"
                android:text="07-28" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="8.75元/公斤" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/gap"
            android:layout_marginTop="@dimen/gap"
            android:drawableLeft="@mipmap/ic_location_gray"
            android:drawablePadding="@dimen/gap"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="新疆新疆新疆新疆新疆新疆新疆新疆"
            android:textSize="@dimen/sp_weaker" />

        <com.flyco.roundview.RoundFrameLayout
            android:id="@+id/rfl_follow"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:paddingBottom="@dimen/gap"
            android:paddingTop="@dimen/gap"
            app:rv_backgroundColor="@color/colorAccent"
            app:rv_cornerRadius="@dimen/gap">

            <TextView
                android:id="@+id/tv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/gap"
                android:gravity="center"
                android:textColor="@color/white"
                tools:text="关注" />
        </com.flyco.roundview.RoundFrameLayout>
    </FrameLayout>

</LinearLayout>






