<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.user.activity.UpdatePwdActivity">

    <include layout="@layout/_widget_toolbar" />

    <LinearLayout
        style="@style/Padding"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/gap_2x"
        android:background="@drawable/bg_white_line_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="原密码"
            android:textColor="@color/common_h1" />

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/common_h1"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/Padding"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/gap_2x"
        android:background="@drawable/bg_white_line_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@color/common_h1" />

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:hint="6-20位英文字母、数字或符号组成"
            android:singleLine="true"
            android:textColor="@color/common_h1"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/Padding"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/gap_2x"
        android:background="@drawable/bg_white_line_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/common_h1" />

        <EditText
            android:id="@+id/et_re_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请再输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/common_h1"
            android:textSize="13sp" />
    </LinearLayout>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/btn_submit"
        style="@style/Button.Round"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/gap_3x"
        android:layout_marginRight="@dimen/gap_3x"
        android:layout_marginTop="@dimen/gap_3x"
        android:padding="@dimen/gap_2x"
        android:text="确定"
        android:textSize="@dimen/sp_larger"
        app:rv_backgroundColor="@color/colorAccent" />
</LinearLayout>