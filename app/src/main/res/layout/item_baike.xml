<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/gap_2x"
    android:paddingLeft="@dimen/gap_3x"
    android:paddingRight="@dimen/gap_3x"
    android:paddingTop="@dimen/gap_2x">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginRight="@dimen/gap_2x"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_test" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国木虱"
            android:textColor="@color/common_h1"
            android:textSize="@dimen/sp_larger" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap"
            android:maxLines="2"
            android:text="一、生活习性。(一)成虫：不同时期产卵的部位不同。越冬代成虫将卵产在1～2年生枝条的叶痕处，待发芽、开花后有利于初孵幼虫就近取食。\n(二)若虫：1、若虫喜欢在叶"
            android:textColor="@color/common_h2"
            android:textSize="@dimen/sp_weaker" />
    </LinearLayout>

</LinearLayout>