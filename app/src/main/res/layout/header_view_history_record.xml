<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/gap_3x">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h2"
            tools:text="订单状态：已完成" />

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap"
            android:textColor="@color/common_h2"
            tools:text="订单编号：456231654231" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap"
            android:textColor="@color/common_h2"
            tools:text="更新时间：2017-05-05" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_2x"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_order_perate"
        android:drawablePadding="@dimen/gap_2x"
        android:padding="@dimen/gap_3x"
        android:text="操作历史"
        android:textColor="@color/common_h1"
        android:textSize="@dimen/sp_larger" />

    <include layout="@layout/widget_view_line" />
</LinearLayout>