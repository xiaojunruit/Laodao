<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/gap_2x"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gap_3x">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/gap_3x">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/gap_2x"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:text="小贾农资门店"
                android:textColor="@color/common_h1"
                android:textSize="@dimen/sp_larger" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_larger" />
    </LinearLayout>

    <include layout="@layout/widget_view_line" />

    <TextView
        android:id="@+id/tv_order_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/gap_3x"
        android:paddingRight="@dimen/gap_3x"
        android:paddingTop="@dimen/gap_2x"
        android:text="订单号码：4984987465494"
        android:textSize="@dimen/sp_larger" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/gap_3x"
            android:paddingRight="@dimen/gap"
            android:paddingTop="@dimen/gap_2x"
            android:text="订单总额：498498元"
            android:textSize="@dimen/sp_larger" />

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h4"
            android:text="(已优惠：500元)"
            android:textSize="@dimen/sp_weaker" />
    </LinearLayout>
</LinearLayout>